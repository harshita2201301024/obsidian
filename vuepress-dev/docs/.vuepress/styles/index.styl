// Define primary and secondary colors
$c-brand = #007BFF  // Primary Color (Blue)
$c-brand-light = #0056B3  // Darker Primary
$c-accent = #FFA500  // Secondary Color (Orange)

// Override VuePress Default Theme Colors
:root
  --c-brand $c-brand
  --c-brand-light $c-brand-light
  --vp-c-accent $c-accent

// Apply styles
.navbar
  background-color $c-brand

.navbar a
  color white

.button
  background-color $c-accent
  color white
  padding 10px 20px
  border-radius 5px
